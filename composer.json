{
    "name": "wikimedia/php_tangle",
    "description": "PhpTangle analyzes circular dependencies in PHP source code.",
    "type": "library",
    "keywords": [
        "phptangle",
        "quality",
        "dependency",
        "refactoring",
        "modularization"
    ],
    "license": "LGPL 2+",
    "authors": [
        {
            "name": "Daniel Kinzler"
        }
    ],
    "require": {
        "php": ">=7.0.0",
        "ext-tokenizer": "*",
        "symfony/console": "^4.0",
        "symfony/finder": "^4.0",
        "phpunit/php-token-stream": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.0 || ^5.0 || ^6.0 || ^7.0"
    },
    "autoload": {
        "psr-4": { "Wikimedia\\PhpTangle\\": "src/" }
    },
    "bin": [
        "bin/phptangle"
    ]
}
